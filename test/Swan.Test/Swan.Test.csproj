<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Description>Unit Testing project</Description>
        <Copyright>Copyright (c) 2016-2019 - Unosquare</Copyright>
        <AssemblyTitle>Unosquare SWAN Test</AssemblyTitle>
        <TargetFramework>netcoreapp3.0</TargetFramework>
        <AssemblyName>Unosquare.Swan.Test</AssemblyName>
        <CodeAnalysisRuleSet>..\..\StyleCop.Analyzers.ruleset</CodeAnalysisRuleSet>
        <LangVersion>8.0</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\src\Swan.Lite\Swan.Lite.csproj" />
        <ProjectReference Include="..\..\src\Swan\Swan.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="coverlet.msbuild" Version="2.7.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.4.0" />
        <packagereference Include="NUnit3TestAdapter" Version="3.16.0">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </packagereference>
        <PackageReference Include="NUnit" Version="3.12.0" />
        <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
            <PrivateAssets>All</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Portable.BouncyCastle" Version="1.8.5.2" />
    </ItemGroup>

</Project>
